<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/pengajuan_fragment"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.jangkung.ktm.PengajuanFragment"
        tools:showIn="@layout/app_bar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
        <TextView
            fontPath="Montserrat-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="               DETAIL PENGAJUAN"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:background="@color/colorbg"
            android:textColor="@color/grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitEnd"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_person"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etNamaLayout"
                    android:layout_width="match_parent"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etNamapengajuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:hint="Full Name"
                        android:inputType="none"
                        android:shadowColor="#000000"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorLink="#000000" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitEnd"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_nrp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etProdiLayout"
                    android:layout_width="match_parent"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etNRPpengajuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:hint="NRP"
                        android:inputType="none"
                        android:shadowColor="#000000"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorLink="#000000" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitEnd"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_prodi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etProdiLayout"
                    android:layout_width="match_parent"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etProdipengajuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:hint="Program Studi"
                        android:inputType="none"
                        android:shadowColor="#000000"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorLink="#000000" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitEnd"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_status"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etProdiLayout"
                    android:layout_width="match_parent"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etStatuspengajuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:hint="Status"
                        android:inputType="none"
                        android:shadowColor="#000000"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorLink="#000000" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_home"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/etCityLayout"
                android:layout_width="match_parent"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:textSize="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etCitypengajuan"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City of Birth"
                    android:editable="false"
                    android:shadowColor="#000000"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorLink="#000000" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_calendar_2"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_gender"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etDateLayout"
                    android:layout_width="match_parent"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etDatepengajuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="Date of Birth"
                        android:editable="false"
                        android:shadowColor="#000000"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorLink="#000000" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etGenderLayout"
                    android:layout_width="match_parent"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:inputType="none"
                        android:id="@+id/etGenderpengajuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gender"
                        android:editable="false"
                        android:shadowColor="#000000"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorLink="#000000" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_submitpengajuan"
            android:layout_width="120dp"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@drawable/back"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:contextClickable="true"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:shadowColor="@color/foreground"
            android:text="Submit"
            android:textSize="16dp" />


    </LinearLayout>
</ScrollView>