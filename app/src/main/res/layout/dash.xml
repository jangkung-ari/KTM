<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dash"
        android:layout_width="match_parent"
        android:layout_marginTop="245dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:id="@+id/lorem"
            fontPath="Montserrat-Bold.ttf"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Kartu Mahasiswa"
            android:textColor="#000000"
            android:textSize="36dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ipsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_horizontal"
            android:text="'Please register your id...'"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/ipsum2"
            fontPath="Montserrat-LightItalic.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:text="'Segera daftarkan id kamu...'"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="italic" />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="#000000"/>

        <TextView
            fontPath="Montserrat-Medium.ttf"
            android:id="@+id/textlorem"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="fill_horizontal"
            android:text="@string/loremipsum"
            android:textColor="#000000"
            android:textSize="14dp" />

    </LinearLayout>
</ScrollView>
